<h3>Create a new form for Blogs</h3>


<%= form_tag '/users/:user_id/posts' do %>

<%= text_field_tag :title %>
<%= text_area_tag :content %>
<%= submit_tag 'Submit' %>
<% end %>
 
 <%= form_for @post, :url => posts_path do |f| %>

<%= f.text_field :title %>
<%= f.text_area :content %>
<%= f.submit %>
<% end %>