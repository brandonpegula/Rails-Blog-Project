<div class="profile"><h1>User Profile</h1>

<h2>Welcome <%= @user.fname %> <%= @user.lname %></h2>

<div>Username:

<%= @user.username %>

<a href='/users/<%= @user.id %>/edit'>Edit</a></div>

</div>



<div class="blog-list">
<h2>All Blog Posts:</h2>

<p><%= link_to "Write a new Post", new_post_path %></p>

<% if @posts.present? %>
   <% @posts.each do |p| %>
      <div><%= p.title %><a href='/posts/<%= p.id %>/edit'> Edit</a></div>
      
   <% end %>
<% end %>
</div>

